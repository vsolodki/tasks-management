
<%= simple_form_for(@category) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">

    <%= f.input :title %>

    <%= f.input :color %>

  </div>

  <div class="btn btn-outline-primary">
    <%= f.button :submit %>
  </div>
<% end %>

<p id="notice"><%= notice %></p>

<div class="d-flex justify-content-center"><h1>Categories</h1></div>

<% if @categories.any? %>
<table class="table table-hover">
  <thead>
    <tr>
      <th>ID</th>
      <th>Title</th>
      <th>Color</th>
      <th>Count of Tasks</th>
      <th>Creation Date</th>
      <th>Date of change</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.id %></td>
        <td><%= category.title %></td>
        <td><%= ColorConverter.rgb(category.color) %>
          <svg width="20" height="20">
            <rect width="20" height="20" style="fill:<%= category.color%>" />
          </svg>
        </td>
        <td><%= category.tasks.count %></td>
        <td><%=category.created_at.strftime("%B %d, %Y %H:%M") %></td>
        <td><%= category.updated_at.strftime("%B %d, %Y %H:%M") %></td>
        <td><%= link_to 'Show', category %></td>
        <td><%= link_to 'Edit', edit_category_path(category) %></td>
        <td><%= link_to 'Delete', category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<button type="button" class="btn btn-outline-primary"><%= link_to 'New Category', new_category_path %></button>
<% else %>
  There is not any category, you need to create one.
<button type="button" class="btn btn-outline-primary"><%= link_to 'New Category', new_category_path %></button>
<% end %>

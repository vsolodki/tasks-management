<p id="notice"><%= notice %></p>

<div class="d-flex justify-content-center"><h1>Tags</h1></div>

<% if @tags.any? %>
<table class="table table-hover">
  <thead>
    <tr>
      <th>ID</th>
      <th>Title</th>
      <th>Color</th>
      <th>Creation Date</th>
      <th>Date of change</th>
      <th>Count of tasks</th>
      <th></th>
      <th></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tags.each do |tag| %>
      <tr>
        <td><%= tag.id %></td>
        <td><%= tag.title %></td>
        <td><%= ColorConverter.rgb(tag.color) %>
          <svg width="20" height="20">
            <rect width="20" height="20" style="fill:<%= tag.color%>" />
          </svg>
        </td>
        <td><%= tag.created_at.strftime("%B %d, %Y %H:%M") %></td>
        <td><%= tag.updated_at.strftime("%B %d, %Y %H:%M") %></td>
        <td><%= tag.tasks.count %></td>
        <td><%= link_to 'Show', tag %></td>
        <td><%= link_to 'Edit', edit_tag_path(tag) %></td>
        <td><%= link_to 'Delete', tag, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<button type="button" class="btn btn-outline-primary"><%= link_to 'New Tag', new_tag_path %></button>
<%else %>
  There is not any tag, you need to create one.
  <button type="button" class="btn btn-outline-primary"><%= link_to 'New Tag', new_tag_path %></button>
<%end %>
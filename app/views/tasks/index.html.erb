<p id="notice"><%= notice %></p>
<div class="d-flex justify-content-center">
  <h1>Tasks</h1>
</div>
<% if @tasks.any? %>
<table class="table table-hover">
  <thead>
    <tr>
      <th>Deadline at</th>
      <th>Title</th>
      <th>Note</th>
      <th>Is done</th>
      <th>Tags</th>
      <th>Category</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.deadline_at.strftime("%B %d, %Y %H:%M") %></td>
        <td><%= task.title %></td>
        <td>
          <% task.note %>
        </td>
        <td><%= task.is_done %></td>
        <td>
          <%= task.tags.each do |tag| -%>
             <%= tag.title %>
          <% end -%>
            </td>
        <td><%= task.category.title %></td>
        <td><%= link_to 'Show', task %></td>
        <td><%= link_to 'Edit', edit_task_path(task) %></td>

      </tr>
    <% end %>
    <%#= will_paginate @tasks %>
  </tbody>
</table>

  <%= simple_form_for :search, url: tasks_path, method: "GET", html: { class: 'form-inline' } do |f| %>
    <%= f.input :title, input_html: {value: ""} %>
    <%= f.submit "Search", class: "btn btn-primary" %>
  <% end %>

  <%= form_tag(tasks_path, :method => "get", id: "search-form") do %>
    <%= text_field_tag :search, params[:search], placeholder: "Search Tasks" %>
    <%= submit_tag "Search" %>
  <% end %>

<br>

<button type="button" class="btn btn-outline-primary"><%= link_to 'New Task', new_task_path %></button>
<%else %>
There is not any task, you need to create one.
<button type="button" class="btn btn-outline-primary"><%= link_to 'New Task', new_task_path %></button>
<%end %>
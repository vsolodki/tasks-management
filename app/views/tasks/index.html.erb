<p id="notice"><%= notice %></p>
<h1>Tasks</h1>
<div>
  <aside><p> You can see on the top Categories, Tasks and Tags</p></aside>
</div>
<table class="table table-hover">
  <thead>
    <tr>
      <th>Deadline at</th>
      <th>Title</th>
      <th>Note</th>
      <th>Is done</th>
      <th>Tags</th>
      <th>Category</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.deadline_at.to_s %></td>
        <td><%= task.title %></td>
        <td><%= task.note %></td>
        <td><%= task.is_done %></td>
        <td>
          <%= task.tags.each do |tag| -%>
             <%= tag.title %><% end -%>
            </td>
        <td><%= task.category.title %></td>
        <td><%= link_to 'Show', task %></td>
        <td><%= link_to 'Edit', edit_task_path(task) %></td>

      </tr>
    <% end %>
  </tbody>
</table>

<br>

<button type="button" class="btn btn-outline-primary"><%= link_to 'New Task', new_task_path %></button>
